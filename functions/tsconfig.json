{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "es2017",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    // --- THE MONOREPO FIX ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["../*"]
    },

    // --- THE DEPENDENCY HELL FIX ---
    // This tells TypeScript to ONLY look for types in the functions/node_modules/@types folder
    // and NOT to look in the parent project's node_modules.
    "typeRoots": ["./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}